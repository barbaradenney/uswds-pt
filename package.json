{
  "name": "uswds-pt",
  "version": "0.1.0",
  "private": true,
  "description": "USWDS Web Components Prototyping Tool",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @uswds-pt/api db:migrate",
    "db:push": "pnpm --filter @uswds-pt/api db:push",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "packages/editor/src/**/*.{ts,tsx}": "eslint --config packages/editor/eslint.config.js --no-warn-ignored",
    "packages/api/src/**/*.ts": "eslint --config packages/api/eslint.config.js --no-warn-ignored",
    "packages/adapter/src/**/*.ts": "eslint --config packages/adapter/eslint.config.js --no-warn-ignored",
    "packages/shared/src/**/*.ts": "eslint --config packages/shared/eslint.config.js --no-warn-ignored"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
